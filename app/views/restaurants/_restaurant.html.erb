<li><div id="top_dishes">
	<div class="restaurant">
		
		<div class="info">		
			<div class="name"><%= @restaurant.name %></div>
			<div class="rate">
				<div class="star fill"></div>
				<div class="star fill"></div>
				<div class="star fill"></div>
				<div class="star half"></div>
				<div class="star empty"></div>
				<div class="rating"><div class="ico"></div><%= @restaurant.yelp_reviews_count %> on Yelp</div>
			</div>
			<a id="menu_button" href="#"></a>
		</div>
		<div class="address"><%= @restaurant.address %></div>
		<div class="stats"><%= @restaurant.cuisine %> | <% @restaurant.bill.times do%>$<% end %></div>	
	</div>

	<div class="hr"></div>

	<div id="banner">
		Based on <%= @restaurant.yelp_reviews_count %> reviews on Yelp, Zagat, Foursquare
	</div>

	<% @restaurant.dishes.order('likes DESC').each do |d| %>
		<div class="dish_container">
			<div class="dish_info">
				<div class="rating"><span><%= d.likes %></span></div>
				<div class="name"><%= d.name %></div>
				<div class="stats">
					<div class="dislike"><%= d.dislikes %></div>
					<div class="like"><%= d.likes %></div>
				</div>
				<div class="hrw"></div>
				<%= awesome_buttons(session[:user],d) %>	
			</div>
			<div class="dish" style="background-image: url('<%= d.reviews.where("dish_id = #{d.id} AND photo IS NOT NULL").first.photo %>')">
				<div class="name"><%= d.name %></div>
				<% if review_w_comment = d.reviews.where("dish_id = #{d.id} AND comment IS NOT NULL").order('created_at DESC').first %>
				<div class="comment">
					<div class="user_img" style="background: url('<%= review_w_comment.user.photo %>') left center"></div>
					<%= review_w_comment.comment.length > 100 ? review_w_comment.comment[0 .. 97] + '...' : review_w_comment.comment %>
				</div>					
				<% end %>
			</div>
		</div>
	<% end %>
	
</div></li>