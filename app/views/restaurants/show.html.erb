<div data-role="header">
	<%= user_picture%>
	<h1 id="logo"></h1>
</div><!-- /header -->
<div data-role="content fixed">

	<div id="top_dishes">
	
		<div class="restaurant">
			<div class="info">
				<div class="name"><%= @restaurant.name %></div>
				<div class="rate">
					<div class="star fill"></div>
					<div class="star fill"></div>
					<div class="star fill"></div>
					<div class="star half"></div>
					<div class="star empty"></div>
					<div class="rating"><div class="ico"></div><%= @restaurant.yelp_reviews_count %> on Yelp</div>
				</div>
			</div>
			<div class="address"><%= @restaurant.address %></div>
			<div class="stats"><%= @restaurant.cuisine %> | <% @restaurant.bill.times do%>$<% end %></div>	
			<a id="menu_button" href="#"></a>
		</div>
		<div class="hr"></div>
		<div id="banner">
			Based on <%= @restaurant.yelp_reviews_count %> reviews on Yelp, Zagat, Foursquare
		</div>
		<% @restaurant.dishes.order('likes DESC').each do |d| %>
			<div class="dish h_110" style="background-image: url('<%= d.reviews.where("dish_id = #{d.id} AND photo IS NOT NULL").first.photo %>')">
				<div class="name"><%= d.name %></div>
				<div class="rating"><span><%= (d.likes * 100)/@restaurant.dishes.sum(:likes) %></span>%</div>
				<div class="dish_info">
					<div class="cover"></div>
					<div class="name"><%= d.name %></div>
					<div class="stats">
						<div class="dislike"><%= d.dislikes %></div>
						<div class="like"><%= d.likes %></div>
					</div>
					<%= awesome_buttons(session[:user],d) %>	
				</div>
				<div class="user_img" style="background: url('<%= d.reviews.where("dish_id = #{d.id} AND photo IS NOT NULL").first.user.photo %>') left center"></div>
				<div class="comment"><%= d.reviews.where("dish_id = #{d.id} AND photo IS NOT NULL").first.comment.to_s[0..50] %></div>					
			</div>
		<% end %>
		

	</div>
</div><!-- /content -->