		<div id="wrapper"> 
			<div id="scroller">
				<div id="top_dishes"> 
					<ul id="thelist">
						<li>
							<div class="restaurant">
								<div class="info">
									<div class="name"><%= @restaurant.name %></div>

									<div class="rate">
										<div class="star fill"></div>
										<div class="star fill"></div>
										<div class="star fill"></div>
										<div class="star half"></div>
										<div class="star empty"></div>
										<div class="rating"><div class="ico"></div><%= @restaurant.yelp_reviews_count %> on Yelp</div>
									</div>
								</div>
								
								<div class="address"><%= @restaurant.address %></div>
								<div class="stats"><%= @restaurant.cuisine %> | <% @restaurant.bill.times do%>$<% end %></div>	
							</div>
							<div class="hr"></div>
							<div id="banner">
								Based on <%= @restaurant.yelp_reviews_count %> reviews on Yelp, Zagat, Foursquare
							</div>
						</li>
						
						<% @restaurant.dishes.order('likes DESC').each do |d| %>
						<li>
							<% if dish = d.reviews.where("dish_id = #{d.id} AND remote_photo IS NOT NULL").first %>
							<div class="dish" style="background-image: url('<%= dish.remote_photo %>')">
								<div class="name"><%= d.name.length > 25 ? d.name[0 .. 25] + ' ...' : d.name %></div>
							
								<div class="dish_info_container">				
									<div class="rating"><span><%= d.likes >= 1000 ? ">#{d.likes.to_s[0]}K" : d.likes %></span></div>
									<div class="dish_info">
										<div class="name"><%= d.name.length > 200 ? d.name[0 .. 200] + ' ...' : d.name %></div>
																				<div class="price"></div>
										<div class="stats">
											<div class="dislike"><%= d.dislikes %></div>
											<div class="like"><%= d.likes %></div>
										</div>
										<div class="hr_b"></div>
										<% if rewiew = d.reviews.where("dish_id = #{d.id} AND comment IS NOT NULL").first %>
											<div class="description"><%= rewiew.comment %></div>
										<% end %>
										<%= awesome_buttons(session[:user],d) %>	
									</div>
								</div>
							
								<div class="comment">
									<div class="user_img" style="background: url('<%= d.reviews.where("dish_id = #{d.id} AND remote_photo IS NOT NULL").first.user.remote_photo %>') left center"></div>
									<%= d.reviews.where("dish_id = #{d.id} AND remote_photo IS NOT NULL").first.comment.to_s[0..50] %>
								</div>					
							
							</div>
							<% end %>
						</li>
						<% end %>
					
					</div>
				</ul>
				</div>
				</div>
				</div>
				